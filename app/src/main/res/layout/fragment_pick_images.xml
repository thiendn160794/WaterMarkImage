<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="center">

    <Button
        android:id="@+id/btn_open_camera"
        android:text="@string/open_camera"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/btn_select_image"
        android:text="@string/gallery"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@id/btn_open_camera"/>

    <ImageView
        android:id="@+id/iv_watermark"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintTop_toBottomOf="@id/btn_open_camera"
        android:background="@android:color/holo_blue_light"/>

    <Button
        android:id="@+id/btn_pick_water_mark"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/btn_open_camera"
        android:text="@string/pick_watermark" />

</android.support.constraint.ConstraintLayout>